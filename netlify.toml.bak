# netlify.toml

[build]
  command = "npm run build"
  publish = "dist"

[functions]
  directory = "netlify/functions"
  node_bundler = "esbuild"

# -------- Netlify Dev --------
[dev]
  framework  = "vite"
  command    = "npm run dev"
  targetPort = 5161
  port       = 8888
  autoLaunch = true

# -------- Scheduled Functions --------
[functions."send-reminders"]
  schedule = "*/5 * * * *"

# -------- API -> Functions redirects --------
[[redirects]]
  from = "/api/ai/habits-coach"
  to = "/.netlify/functions/ai-habits-coach"
  status = 200

[[redirects]]
  from = "/api/ai/sleep-coach"
  to = "/.netlify/functions/ai-sleep-coach"
  status = 200

[[redirects]]
  from = "/api/ai/finance-advisor"
  to = "/.netlify/functions/ai-finance-advisor"
  status = 200

[[redirects]]
  from = "/api/ai/addiction-coach"
  to = "/.netlify/functions/ai-addiction-coach"
  status = 200

[[redirects]]
  from = "/api/push/remove-subscription"
  to = "/.netlify/functions/remove-subscription"
  status = 200

# -------- SPA fallback --------
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# -------- Caching --------
[[headers]]
  for = "/sw.js"
  [headers.values]
    Cache-Control = "no-cache"

[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# NOTE:
# Do NOT define VITE_SUPABASE_URL or VITE_SUPABASE_ANON_KEY here.
# Use .env files locally and Netlify UI env vars in production.
